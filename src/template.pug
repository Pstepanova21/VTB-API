doctype html
html(lang= 'ru')

head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title VTB-API
  body
    section.main
      form#goalForm
        .general-wrapper#general-wrapper
        .container#container 
        .left
          .el
            label(for="goal") Название цели
            input(type="text", id="goal", name="goal", placeholder="Введите название цели", required)
          .el
            label(for="category") Категория
            select(id="category", name="category", required)
              option(value="") Выберите категорию
              option(value="house") Дом
              option(value="car") Машина
              option(value="equipment") Техника
              option(value="kids") Дети
              option(value="education") Обучение
              option(value="travel") Отпуск
              option(value="shopping") Шоппинг
              option(value="other") Другое
          .el
            label(for="amount") Сумма, которую вы хотите накопить, руб.
            input(type="text", id="amount", name="amount", placeholder="Введите сумму", pattern="[0-9]*", title="Только цифры разрешены", required)
          .el
            label(for="priority") Приоритет цели
            select(id="priority", name="priority", required)
              option(value="") Выберите приоритет
              option(value="1") Высокий
              option(value="2") Средний
              option(value="3") Низкий
          .el
            label(for="endDate") Дата окончания накопления
            input(type="date", id="endDate", name="endDate", required)
          .el
            label(for="currentAmount") Сумма, которую хотите внести сейчас, руб.
            input(id="currentAmount",type='text' ,name="currentAmount", placeholder="Введите сумму", pattern="[0-9]*", title="Только цифры разрешены", )
          .block_for_btn
            button(type="submit",id="btn_save") Сохранить 
            button(type="submit", id="btn_cancel") Отмена
          //button(type="submit", id="add") Пополнить

